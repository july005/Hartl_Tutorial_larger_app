<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
			Ooops! just <%= pluralize(@user.errors.count, "thing") %> before we can move on
		</div>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>



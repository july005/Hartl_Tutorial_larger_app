<% provide(:title, "Edit user") %>
<h1> Update your profile </h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |silly| %>
			<%= render 'shared/error_messages' %>

			<%= silly.label :name %>
			<%= silly.text_field :name, class: 'form-control' %>

			<%= silly.label :email %>
			<%= silly.text_field :email, class: 'form-control' %>

			<%= silly.label :password %>
			<%= silly.text_field :password, class: 'form-control' %>

			<%= silly.label :password_confirmation, "Confirmation" %>
			<%= silly.text_field :password_confirmation, class: 'form-control' %>

			<%= silly.submit "Save changes", class: "btn btn-primary" %>

		<% end %>

		<div class="gravatar_edit">
			<%= gravatar_for @user %>
			<a href="http://gravatar.com/emails" target="_blank">change</a>
		</div>
	</div>
</div>
<% provide(:title, 'Sign Up') %>
<h1>Sign Up!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |boom| %>
    <%= render 'shared/error_messages' %>

      <%= boom.label :name %>
      <%= boom.text_field :name, class: 'form-control' %>

      <%= boom.label :email %>
      <%= boom.email_field :email, class: 'form-control' %>

      <%= boom.label :password %>
      <%= boom.password_field :password, class: 'form-control' %>

      <%= boom.label :password_confirmation, "Confirmation" %>
      <%= boom.password_field :password_confirmation, class: 'form-control' %>

      <%= boom.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>